<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.alphakid.ViewModel.LetraViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Texto para mostrar la letra actual -->
        <TextView
            android:id="@+id/letraText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Letra"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="8dp" />

        <!-- Campo de entrada para que el usuario ingrese la letra -->
        <EditText
            android:id="@+id/inputLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Ingresa una letra"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Botón para validar la letra ingresada -->
        <Button
            android:id="@+id/validarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validar"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Botón para ir a la siguiente letra -->
        <Button
            android:id="@+id/siguienteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</layout>
